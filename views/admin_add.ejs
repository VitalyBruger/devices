<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.3.7/css/bootstrap.min.css">
            
 <script>
 function addSend(){

    var xhr = new XMLHttpRequest();

    var body = 'devise=' + document.getElementById("devise").value+
    '&deviseNumber=' + document.getElementById("deviseNumber").value+
        '&tookDate=' + document.getElementById("tookDate").value+
        '&whoTook=' + document.getElementById("whoTook").value+
         '&period=' + document.getElementById("period").value;
    console.log(body);
    xhr.open("POST", '/admin/add', true)
    xhr.setRequestHeader('Content-Type', 'application/x-www-form-urlencoded')

    xhr.onreadystatechange = function() {
        if (this.readyState != 4) return;
        //document.write(this.responseText);
        window.location.href='/admin';
    }

   xhr.send(body); 
   
}
</script>

<div class="container">
    <div class="row">
        <h1>Додавання нового пристрою</h1>
        <br>

        <table class="table table-striped">
        <tr>
            <td >Пристрій</td>
            <td><input type="text" id="devise" required></td>
        </tr>
         <tr>
            <td >Інвентарний номер</td>
            <td><input type="text" id="deviseNumber" required></td>
        </tr>
        <tr>
            <th>Дата видачі</th>
            <td><input type="text" id="tookDate" required></td>
        </tr>
        <tr>
            <td>Строк оренди</td>
            <td><input type="text" id="period" required></td>
        </tr>
        <tr>
            <td >Хто взяв</td>
            <td><input type="text" id="whoTook" required></td>
        </tr>
        <tr>
            <td ></td>
            <td>
                <input class="btn btn-success" type="button" name="submit" value="Зберегти" 
                        onClick="addSend();">
                <input class="btn btn-danger" type="button" name="cancel" value="Відмінити"  
                        onClick="window.location.href='/admin'">
            </td>
        </tr>
        </table>
    </div>
</div>
        


<script>
 function editSend(){

    var xhr = new XMLHttpRequest();

    var body = 'devise=' + document.getElementById("devise").value+
    '&deviseNumber=' + document.getElementById("deviseNumber").value+
        '&tookDate=' + document.getElementById("tookDate").value+
        '&whoTook=' + document.getElementById("whoTook").value+
        '&period=' + document.getElementById("period").value;
    console.log(body);
    xhr.open("PUT", '/admin/edit/<%=data.id%>', true)
    xhr.setRequestHeader('Content-Type', 'application/x-www-form-urlencoded')

    xhr.onreadystatechange = function() {
        if (this.readyState != 4) return;
        //document.write(this.responseText);
        window.location.href='/admin';
    }

   xhr.send(body); 
   
}
</script>


<script>
 function editSend(){

    var xhr = new XMLHttpRequest();

    var body = 'devicename=' + document.getElementById("devicename").value+
    '&devicenumber=' + document.getElementById("devicenumber").value+
        '&tookdate=' + document.getElementById("tookdate").value+
        '&owner=' + document.getElementById("owner").value+
        '&returndate=' + document.getElementById("returndate").value;    
    xhr.open("PUT", '/admin/edit/<%=data.id%>', true)
    xhr.setRequestHeader('Content-Type', 'application/x-www-form-urlencoded')

    xhr.onreadystatechange = function() {
        if (this.readyState != 4) return;
        //document.write(this.responseText);
        window.location.href='/admin';
    }

   xhr.send(body); 
   
}

function clearDate(dateElemID){
    document.getElementById(dateElemID).value ='';

}
</script>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.3.7/css/bootstrap.min.css">

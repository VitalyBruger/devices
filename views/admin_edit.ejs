        <div class="row">
            <h1>Редагування</h1>            
            <br>
                <table class="table table-striped">
                <tr>
                    <td >Пристрій</td>
                    <td> <input type="text" id="devicename" value="<%=data.devicename%>" required></td>
                </tr>
                 <tr>
                    <td >Інвентарний номер</td>
                    <td><input type="text" id="devicenumber"  value="<%=data.devicenumber%>" required></td>
                </tr>                
                <tr>
                    <td>Дата видачі</td>
                    
                    
                    <td><input type="date" id="tookdate" value="<%=data.tookdate%>" required>
                        <input class="btn btn-info" type="button" value="Очистити" 
                        onClick="clearDate('tookdate');">

                    </td>
                    
                </tr>
                
                <tr>
                    <td>Дата повернення</td>
                    <td><input type="date" id="returndate" value="<%=data.returndate%>"required>
                        <input class="btn btn-info" type="button" value="Очистити" 
                        onClick="clearDate('returndate');">
                    </td>
                </tr>
                <tr>
                   <td >Хто взяв</td>
                   <td><input type="text" id="owner" value="<%=data.owner%>" required></td>
                </tr>
                  
                <tr>
                    <td></td>
                    <td>
                        <input class="btn btn-success" type="button" name="submit" value="Зберегти" 
                        onClick="editSend();">
                        <input class="btn btn-danger" type="button" name="cancel" value="Відмінити"  
                        onClick="window.location.href='/admin'">
                    </td>
                </tr>
